{
  "name": "node-react",
  "version": "1.0.0",
  "description": "Node ReactJS project",
  "repository": {
    "type": "git"
  },
  "main": "src/server/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "webpack-dev-server --hot",
    "build": "webpack && npm run build-css && npm run order-css",
    "start-server": "npm run build && node src/server/server",
    "build-css": "node-sass --include-path scss src/client/app.scss src/public/application.css",
    "order-css": "csscomb src/client && csscomb src/public",
    "watch-css": "nodemon -e scss -x npm run build-css",
    "lint": "./node_modules/.bin/eslint --ext js,jsx src/client src/server",
    "test": "jest"
  },
  "author": "Stephane Moroso",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^22.0.4",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "csscomb": "^4.2.0",
    "eslint": "^4.14.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.0.4",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  }
}
